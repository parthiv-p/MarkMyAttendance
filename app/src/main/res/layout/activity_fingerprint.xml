<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.parthiv.attendance_student.FingerprintActivity"
    android:background="@color/colorPrimary"
    android:id="@+id/activity_fingerprint">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/headerLayout"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content">
        
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_action_fingerprint"
            android:id="@+id/icon"
            android:paddingTop="2dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_fingerprint"
            android:textSize="20sp"
            android:textColor="@color/textPrimary"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="@string/title_fingerprint_text"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fingerprint_bottom_text"
        android:textColor="@color/textPrimaryDark"
        android:textSize="18sp"
        android:text="@string/bottom_fingerprint_text"
        android:layout_marginLeft="24dp"
        android:textAlignment="center"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
